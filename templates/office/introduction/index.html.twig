{% extends 'office/base.html.twig' %}

{% block contenu %}

    {% for message in app.flashes('success') %}
        <div id="successes">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div id="errors">
            {{ message }}
        </div>
    {% endfor %}

    <a class="small_link" href="{{ path('office') }}">&lt;&lt; Retour</a>

    <h3>Gestion du texte de pr√©sentation</h3>

    <button onclick="{% if is_granted('ROLE_ADMIN') %}location.href='{{ path('edit_introduction') }}'
            {% else %}alert(getRandom403String());{% endif %}" class="btn btn-warning center-button">
        <span class="oi oi-pencil" title="pencil" aria-hidden="true"></span> Modifier
    </button>

    <table class="table table-striped table-bordered table-hover">
        <tr>
            <th width="20%">Titre</th>
            <td width="80%">{{ intro.title }}</td>
        </tr>
        <tr>
            <th>Texte</th>
            <td>{{ intro.text|raw }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td><img class="intro-photo" src="{{ asset(intro.photoPath) }}"></td>
        </tr>
    </table>

{% endblock %}
