{% extends 'office/base.html.twig' %}

{% block contenu %}

    {% for message in app.flashes('success') %}
        <div id="successes">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div id="errors">
            {{ message }}
        </div>
    {% endfor %}

    <a class="small_link" href="{{ path('office') }}">&lt;&lt; Retour</a>
    <h3>Infos générales du portfolio</h3>

    <button onclick="{% if is_granted('ROLE_ADMIN') %}location.href='{{ path('edit_general') }}'
                    {% else %}alert(getRandom403String());{% endif %}" class="btn btn-warning center-button">
        <span class="oi oi-pencil" title="pencil" aria-hidden="true"></span> Modifier
    </button>

    <table class="table table-striped table-bordered">
        <tr>
            <th width="20%">Titre de la page</th>
            <td width="80%">{{ info.websiteTitle }}</td>
        </tr>
        <tr>
            <th>Titre</th>
            <td>{{ info.title }}</td>
        </tr>
        <tr>
            <th>Sous-titre</th>
            <td>{{ info.subtitle }}</td>
        </tr>
        <tr>
            <th>Description (méta)</th>
            <td>{{ info.description }}</td>
        </tr>
        <th>Site en ligne ?</th>
        <th>
            {% if info.isOnline %}
                <span class="oi oi-check" title="check" aria-hidden="true"></span> Oui
            {% else %}
                <span class="oi oi-x" title="x" aria-hidden="true"></span> Non
            {% endif %}
        </th>
    </table>

{% endblock %}
