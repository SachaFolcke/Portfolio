{% extends 'office/base.html.twig' %}

{% block contenu %}

    <a class="small_link" href="{{ path('show_project', {'id': id}) }}">&lt;&lt; Retour</a>

    <h3>Ajouter une photo</h3>

    {{ form_start(form, { 'attr' : { 'id' : 'photo-form' }}) }}
        {{ form_row(form.photo) }}

    {% if not hasThumbnail %}
        {{ form_row(form.isThumbnail, { 'attr' : { 'class' : 'form-check-inline' }} ) }}
    {% else %}
        {{ form_row(form.isThumbnail, { 'attr' : { 'class' : 'form-check-inline', 'disabled' : 'true' }} ) }}
    {% endif %}

        <button class="center-button btn btn-primary" type="submit">
            Envoyer
        </button>
    {{ form_end(form) }}

{% endblock %}

