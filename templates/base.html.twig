<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name=viewport content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimal-ui">
        {% block description %}
            <meta name="description" content="{{ info.description }}">
        {% endblock %}
        <title>
            {% block title %}
                {{ info.websiteTitle }}
            {% endblock %}
        </title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/flaticon.css') }}" type="text/css" >
            <link rel="stylesheet" href="{{ asset('css/style.css') }}" type="text/css">
            <link rel="stylesheet" href="{{ asset('css/timeline.css') }}" type="text/css">
            <link rel="stylesheet" href="{{ asset('css/iconic/css/open-iconic-bootstrap.css') }}" type="text/css">
            <link rel="stylesheet" href="{{ asset('css/states.css') }}" type="text/css">
        {% endblock %}

        {% block fonts_and_stuff %}
            <link href="https://fonts.googleapis.com/css?family=Dosis|Amaranth|Didact+Gothic" rel="stylesheet">
            <link href="https://fonts.googleapis.com/css?family=Quicksand:400,500,700" rel="stylesheet">
            <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
        {% endblock %}

        {% block favicons_config %}
            <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('img/favicons/apple-touch-icon.png')}}">
            <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('img/favicons/favicon-32x32.png') }}">
            <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('img/favicons/favicon-16x16.png') }}">
            <link rel="manifest" href="{{ asset('img/favicons/site.webmanifest') }}">
            <link rel="mask-icon" href="{{ asset('img/favicons/safari-pinned-tab.svg') }}" color="#5bbad5">
            <link rel="shortcut icon" href="{{ asset('img/favicons/favicon.ico') }}">
            <meta name="msapplication-TileColor" content="#da532c">
            <meta name="msapplication-config" content="{{ asset('img/favicons/browserconfig.xml') }}">
            <meta name="theme-color" content="#ffffff">
        {% endblock %}

        {% block javascripts %}
            <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
            <script type="text/javascript" src="{{ asset('js/script.js') }}"></script>
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <script>AOS.init({once: true})</script>
        {% endblock %}

    </body>
</html>
